<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link   rel="stylesheet" href="/css/restaurant.css">
</head>
<div class='container'>
    
<% pizzas.forEach(function(pizza) { %>
   
        <div  class="restaurant">
            <h2>
            <form class="form-horizontal" action="/api/user/cart" method="POST" role="form"> 
       <%= pizza.Name %>
       </h2>
       </div>
       <div  class="restaurant">
       <h2>    
       <%= pizza.Food_Type %>
       </h2>
       </div>
    <div class="restaurant" >
        <h4> Price=<%= pizza.Price %>
    </h4>
    </div>
    <div class="col-md-offset-3 col-md-9">
        <input type="submit" name="submit" value="AddItemToCart" class="btn btn-primary">   
        </div>
    <div >
        <img class="image"  src='/uploads/dishesUploads/<%= pizza.ReferancePicture %>'  alt="..."> 
    </div>
    <% }) %>
</form>
</div>